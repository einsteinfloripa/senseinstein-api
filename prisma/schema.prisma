// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Funcao {
  Organizador
  Docente
}

enum Departamento {
  Hogwarts
  Vale
  Ministerio
  Times
  Embaixada
  Portugues
  Literatura
  Ingles
  Espanhol
  Matematica
  Biologia
  Historia
  Geografia
  Fisica
  Quimica
  Filosofia
  Redacao
}

enum EstadoCivil {
  Solteiro
  Casado
  Divorciado
  Separado
  Viuvo
}

model Voluntarios {
  id           String       @id @default(cuid())
  cursoId      Int
  enderecoId   Int
  nome         String
  dataNasc     DateTime
  telefone     String
  email        String
  cpf          String       @unique
  rg           String       @unique
  estadoCivil  EstadoCivil
  funcao       Funcao
  departamento Departamento

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  Saidas   Saidas[]
  Entradas Entradas[]

  curso    Cursos    @relation(fields: [cursoId], references: [id])
  endereco Enderecos @relation(fields: [enderecoId], references: [id])

  @@map("voluntarios")
}

model Enderecos {
  id          Int    @id @default(autoincrement())
  cidade      String
  cep         String
  rua         String
  bairro      String
  complemento String

  Voluntarios Voluntarios[]

  @@map("enderecos")
}

model Cursos {
  id            Int    @id @default(autoincrement())
  instituicaoId Int
  nome          String

  Voluntarios Voluntarios[]

  instituicao Instituicoes @relation(fields: [instituicaoId], references: [id])

  @@map("cursos")
}

model Instituicoes {
  id   Int    @id @default(autoincrement())
  nome String

  Cursos Cursos[]

  @@map("instituicoes")
}

model Entradas {
  id           Int      @id @default(autoincrement())
  voluntarioId String
  data         DateTime @default(now())

  voluntario Voluntarios @relation(fields: [voluntarioId], references: [id])

  @@map("entradas")
}

model Saidas {
  id           Int      @id @default(autoincrement())
  voluntarioId String
  data         DateTime @default(now())

  voluntario Voluntarios @relation(fields: [voluntarioId], references: [id])

  @@map("saidas")
}
